<Window x:Class="CosmeticsStore.WPF.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Management" Height="800" Width="710"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#FF5C8D89"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4A7C78"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FFF8F9FA"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="User Management" FontSize="25" Grid.Row="0" HorizontalAlignment="Center" Margin="10"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <Label Content="User ID" Width="120"/>
            <TextBox x:Name="txtUserID" Width="200" IsEnabled="False"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10">
            <Label Content="Username" Width="120"/>
            <TextBox x:Name="txtUsername" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="10">
            <Label Content="Password" Width="120"/>
            <TextBox x:Name="txtPassword" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="10">
            <Label Content="Email" Width="120"/>
            <TextBox x:Name="txtEmail" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="10">
            <Label Content="Role" Width="120"/>
            <ComboBox x:Name="cboRole" Width="200">
                <ComboBoxItem Content="Admin" Tag="Admin"/>
                <ComboBoxItem Content="Customer" Tag="Customer"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="6" Margin="10">
            <Label Content="Status" Width="120"/>
            <ComboBox x:Name="cboStatus" Width="200">
                <ComboBoxItem Content="Active" Tag="true"/>
                <ComboBoxItem Content="Inactive" Tag="false"/>
            </ComboBox>
        </StackPanel>

        <DataGrid x:Name="dgUsers" Grid.Row="7" Margin="10" AutoGenerateColumns="False" SelectionChanged="dgUsers_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="UserId" Binding="{Binding UserId}"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}"/>
                <DataGridTextColumn Header="CreatedDate" Binding="{Binding CreatedDate}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="Password" Binding="{Binding Password}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="8" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnCreate" Content="Create" Width="100" Margin="5" Click="btnCreate_Click" Style="{StaticResource NavButton}"/>
            <Button x:Name="btnUpdate" Content="Update" Width="100" Margin="5" Click="btnUpdate_Click" Style="{StaticResource NavButton}"/>
            <Button x:Name="btnDelete" Content="Delete" Width="100" Margin="5" Click="btnDelete_Click" Style="{StaticResource NavButton}"/>
            <Button x:Name="btnClose" Content="Close" Width="100" Margin="5" Click="btnClose_Click" Style="{StaticResource NavButton}"/>
        </StackPanel>
    </Grid>
</Window>
