<Window x:Class="CosmeticsStore.WPF.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CosmeticsStore.WPF"
        mc:Ignorable="d"
        Title="Checkout" Height="648" Width="548"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Complete Your Order" 
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Checkout Form -->
        <StackPanel Grid.Row="1" Margin="0,10">
            <!-- Shipping Information Section -->
            <TextBlock Text="Shipping Information" 
                       FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <TextBlock Text="Shipping Address:" Margin="0,10,0,5"/>
            <TextBox x:Name="txtShippingAddress" Height="80" TextWrapping="Wrap" 
                     AcceptsReturn="True" Margin="0,0,0,15"/>

            <!-- Payment Information Section -->
            <TextBlock Text="Payment Information" 
                       FontSize="18" FontWeight="SemiBold" Margin="0,20,0,10"/>

            <TextBlock Text="Payment Method:" Margin="0,10,0,5"/>
            <ComboBox x:Name="cmbPaymentMethod" Width="200" HorizontalAlignment="Left" Margin="0,0,0,15"/>

            <!-- Order Summary Section -->
            <TextBlock Text="Order Summary" 
                       FontSize="18" FontWeight="SemiBold" Margin="0,20,0,10"/>

            <TextBlock Text="By confirming your order, you agree to our Terms and Conditions." 
                       TextWrapping="Wrap" Foreground="#FF555555" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnCancel" Grid.Column="1" Content="Cancel" 
                    Padding="15,8" Margin="0,0,10,0" Click="btnCancel_Click"/>

            <Button x:Name="btnConfirmOrder" Grid.Column="2" Content="Confirm Order" 
                    Background="#FF5C8D89" Foreground="White" 
                    Padding="15,8" Click="btnConfirmOrder_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
