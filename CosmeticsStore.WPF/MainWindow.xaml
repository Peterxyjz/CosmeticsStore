<Window x:Class="CosmeticsStore.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cosmetics Store" Height="600" Width="1000" 
        WindowStartupLocation="CenterScreen"
        >
    <Window.Resources>
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF5F5F5"/>
                    <Setter Property="Foreground" Value="#FF5C8D89"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header/Navigation Bar -->
        <Border Grid.Row="0" Background="White" BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <TextBlock Grid.Column="0" Text="COSMETICS" FontSize="20" FontWeight="Bold" 
                           Foreground="#FF5C8D89" VerticalAlignment="Center" Margin="20,0,0,0"/>

                <!-- Navigation Items -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                    
                    <!--<Button Content="Products" Style="{StaticResource NavButton}" Click="btnProducts_Click"/>-->
                    <Button Content="Categories" Style="{StaticResource NavButton}" Click="btnCategories_Click"/>
                    <Button Content="My Cart" Style="{StaticResource NavButton}" Click="btnCart_Click"/>
                    <Button Content="My Orders" Style="{StaticResource NavButton}" Click="btnOrders_Click"/>

                    <!-- Category Popup -->
                    <Popup x:Name="categoryPopup"
                           PlacementTarget="{Binding ElementName=btnCategories}"
                           Placement="Bottom"
                           AllowsTransparency="True"
                           PopupAnimation="Fade"
                           StaysOpen="False">
                        <Border BorderBrush="LightGray"
                                BorderThickness="1"
                                Background="White"
                                CornerRadius="8"
                                Padding="2">
                            <!-- Increased corner radius for a more modern look -->
                            <Border.Effect>
                                <DropShadowEffect Color="Gray"
                                                  Direction="315"
                                                  ShadowDepth="4"
                                                  BlurRadius="8"
                                                  Opacity="0.4" />
                                <!-- Enhanced shadow effect -->
                            </Border.Effect>
                            <StackPanel Width="220"
                                        Background="White">
                                <!-- Slightly wider for better spacing -->
                                <!-- Title -->
                                <Border BorderBrush="LightGray"
                                        BorderThickness="0,0,0,1"
                                        Background="#FF5C8D89">
                                    <!-- Matching the app's color scheme -->
                                    <TextBlock Text="Select Category"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               Padding="10,10,10,8"
                                               FontSize="14" />
                                    <!-- Better padding and text color -->
                                </Border>

                                <!-- Category ListBox -->
                                <!-- Category ListBox -->
                                <ListBox x:Name="categoryListBox"
                                         MaxHeight="300"
                                         BorderThickness="0"
                                         SelectionChanged="CategoryListBox_SelectionChanged"
                                         Margin="0,4,0,0">
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Padding"
                                                    Value="10,8,10,8" />
                                            <Setter Property="Cursor"
                                                    Value="Hand" />
                                            <Setter Property="FontWeight"
                                                    Value="SemiBold" />
                                            <!-- Making text bolder -->
                                            <Setter Property="FontSize"
                                                    Value="14" />
                                            <!-- Increasing font size -->
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#FFF5F5F5" />
                                                    <Setter Property="Foreground"
                                                            Value="#FF5C8D89" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBoxItem Content="All Categories"
                                                 Tag="0" />
                                </ListBox>

                                <!-- Separator -->
                                <Separator Margin="8,2,8,2" />

                                <!-- Close Button -->
                                <!-- Close Button -->
                                <Button Content="Close"
                                        Margin="8,6,8,8"
                                        HorizontalAlignment="Right"
                                        Click="ClosePopupButton_Click"
                                        Padding="15,7"
                                        Width="80"
                                        Background="#FF5C8D89"
                                        Foreground="White"
                                        FontWeight="SemiBold">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="Background"
                                                            Value="#FF4A7C78" />
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="Gray"
                                                                              Direction="315"
                                                                              ShadowDepth="1"
                                                                              BlurRadius="3"
                                                                              Opacity="0.3" />
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Popup>
                    
                </StackPanel>

                <!-- User Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <TextBlock x:Name="txtWelcome" Text="Welcome" VerticalAlignment="Center" 
                               FontWeight="SemiBold" Margin="0,0,15,0"/>
                    <Button Content="Logout" Background="#FF5C8D89" Foreground="White" 
                            Padding="10,5" BorderThickness="0" Click="btnLogout_Click" Height="24" Width="44">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="5" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        BorderBrush="{TemplateBinding BorderBrush}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Row="1" Background="#FFF8F9FA">
            <ContentControl x:Name="mainContent" Margin="20">
                <!-- Welcome Banner -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#FF5C8D89" CornerRadius="10" Padding="30">
                        <StackPanel>
                            <TextBlock Text="Welcome to Cosmetics Store" FontSize="28" FontWeight="Bold" 
                                       Foreground="White" Margin="0,0,0,10"/>
                            <TextBlock Text="Discover our wide range of premium beauty products" 
                                       FontSize="16" Foreground="White" TextWrapping="Wrap"/>
                            <Button Content="SHOP NOW" Background="White" Foreground="#FF5C8D89" 
                                    FontWeight="Bold" Padding="15,8" Margin="0,20,0,0" 
                                    HorizontalAlignment="Left" Click="btnProducts_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Featured Products Section (Placeholder) -->
                    <Grid Grid.Row="1" Margin="0,20,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="txtFeaturedProducts" Grid.Row="0" Text="Featured Products" FontSize="22" 
                                   FontWeight="SemiBold" Margin="0,0,0,15"/>

                        <TextBlock Grid.Row="1" Text="Products will be displayed here" 
                                   FontSize="18" Foreground="#FF6D6D6D" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <!--<Image x:Name="imgCleanser" HorizontalAlignment="Left" Height="112" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="117"/>-->
                        <ListBox x:Name="lbProduct" SelectionChanged="ProductListBox_SelectionChanged" Margin="0,44,0,0" Grid.RowSpan="2">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <!-- Mỗi item là một StackPanel chứa hình ảnh, tên và giá -->
                                    <StackPanel Orientation="Vertical" Width="150" Margin="10">
                                        <!-- Hình ảnh sản phẩm -->
                                        <Image Source="{Binding ImageUrl}" Width="120" Height="120" />
                                        <!-- Tên sản phẩm -->
                                        <TextBlock Text="{Binding ProductName}" HorizontalAlignment="Center" FontWeight="Bold" />
                                        <!-- Giá sản phẩm -->
                                        <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}" HorizontalAlignment="Center" />
                                        <!-- Nút Add to Cart -->
                                        <Button Content="Add to Cart" 
                                            Background="#FF5C8D89" 
                                            Foreground="White" 
                                            Padding="10,5" 
                                            Margin="0,5,0,0"
                                            Click="btnAddToCart_Click"
                                            Tag="{Binding ProductId}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="5" 
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        BorderBrush="{TemplateBinding BorderBrush}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <!-- Sắp xếp các item theo dạng lưới -->
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>
                    </Grid>
                </Grid>
            </ContentControl>
        </Border>
    </Grid>
</Window>