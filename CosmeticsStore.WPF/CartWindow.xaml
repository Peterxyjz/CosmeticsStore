<Window x:Class="CosmeticsStore.WPF.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CosmeticsStore.WPF"
        mc:Ignorable="d"
        Title="Shopping Cart" Height="500" Width="800" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Danh sách sản phẩm trong giỏ hàng -->
        <ListView x:Name="lvCartItems" Grid.Row="0" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Product" Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding ImageUrl}" Width="40" Height="40" Margin="0,0,10,0" />
                                    <TextBlock Text="{Binding ProductName}" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Price" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Price, StringFormat=\${0:F2}}" HorizontalAlignment="Right" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Quantity" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="btnDecreaseQuantity" Content="-" Width="25" Margin="0,0,5,0" 
                                            Click="btnDecreaseQuantity_Click" />
                                    <TextBlock Text="{Binding Quantity}" Width="30" TextAlignment="Center" VerticalAlignment="Center" />
                                    <Button x:Name="btnIncreaseQuantity" Content="+" Width="25" Margin="5,0,0,0" 
                                            Click="btnIncreaseQuantity_Click" />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Subtotal" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Subtotal, StringFormat=\${0:F2}}" HorizontalAlignment="Right" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Actions" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="btnRemove" Content="Remove" Width="70" Click="btnRemove_Click" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>


        <TextBlock x:Name="txtTotal" Grid.Row="1" Text="Total: $0.00" FontSize="16" FontWeight="Bold" 
                   HorizontalAlignment="Right" Margin="0,0,0,10" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnContinueShopping" Content="Continue Shopping" Width="150" Height="30" Margin="0,0,10,0" 
                    Click="btnContinueShopping_Click" />
            <Button x:Name="btnCheckout" Content="Checkout" Width="150" Height="30" Background="#4CAF50" Foreground="White"
                    Click="btnCheckout_Click" />
        </StackPanel>
    </Grid>
</Window>