<Window x:Class="CosmeticsStore.WPF.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CosmeticsStore.WPF"
        mc:Ignorable="d"
        Title="My Orders" Height="600" Width="900" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Column="0" Grid.Row="0" Text="Order History" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Order List -->
        <ListBox x:Name="lstOrders" Grid.Column="0" Grid.Row="1" Margin="0,0,10,0" SelectionChanged="lstOrders_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5" Width="280">
                        <StackPanel>
                            <TextBlock>
                                <Run Text="Order #" FontWeight="Bold"/>
                                <Run Text="{Binding OrderId}"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Date: "/>
                                <Run Text="{Binding OrderDate, StringFormat={}{0:MM/dd/yyyy}}"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Total: $"/>
                                <Run Text="{Binding TotalAmount, StringFormat={}{0:F2}}"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Status: "/>
                                <Run Text="{Binding Status}" />
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Order Details Section -->
        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" BorderBrush="LightGray" BorderThickness="1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Order Header Information -->
                <TextBlock Grid.Row="0" Text="Order Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Order Details Fields -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Order ID:" FontWeight="Bold" Margin="0,5,5,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtOrderId" Margin="0,5,15,5"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Order Date:" FontWeight="Bold" Margin="0,5,5,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" x:Name="txtOrderDate" Margin="0,5,0,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Status:" FontWeight="Bold" Margin="0,5,5,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtStatus" Margin="0,5,15,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Total Amount:" FontWeight="Bold" Margin="0,5,5,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" x:Name="txtTotalAmount" Margin="0,5,0,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Payment Method:" FontWeight="Bold" Margin="0,5,5,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtPaymentMethod" Margin="0,5,15,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Payment Status:" FontWeight="Bold" Margin="0,5,5,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" x:Name="txtPaymentStatus" Margin="0,5,0,5"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Shipping Address:" FontWeight="Bold" Margin="0,5,5,5"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" x:Name="txtShippingAddress" TextWrapping="Wrap" Margin="0,5,0,5"/>
                </Grid>

                <!-- Order Items -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Items" FontWeight="Bold" Margin="0,0,0,5"/>

                    <ListView Grid.Row="1" x:Name="lstOrderDetails" BorderThickness="1" BorderBrush="LightGray">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Product ID" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ProductId}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Product Name" Width="200">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding ProductName}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Price" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Price, StringFormat=\${0:F2}}" HorizontalAlignment="Right"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Quantity" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Quantity}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Subtotal" Width="80">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Subtotal, StringFormat=\${0:F2}}" HorizontalAlignment="Right"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </Grid>
        </Border>

        <!-- Button Panel -->
        <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnClose" Content="Close" Width="100" Height="30" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>