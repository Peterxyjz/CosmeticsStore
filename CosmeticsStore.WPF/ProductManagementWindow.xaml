<Window x:Class="CosmeticsStore.WPF.ProductManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Management" Height="800" Width="710"
           Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#FF5C8D89"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4A7C78"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.Background>
                <SolidColorBrush Color="#FFF8F9FA"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>  <!-- Title Row -->
                <RowDefinition Height="Auto"/> <!-- Product ID Row -->
                <RowDefinition Height="Auto"/> <!-- Product Name Row -->
                <RowDefinition Height="Auto"/> <!-- Description Row -->
                <RowDefinition Height="Auto"/> <!-- Price Row -->
                <RowDefinition Height="Auto"/> <!-- Stock Quantity Row -->
                <RowDefinition Height="Auto"/> <!-- Category Row -->
                <RowDefinition Height="Auto"/> <!-- Image URL Row -->
                <RowDefinition Height="Auto"/> <!-- Created Date Row -->
                <RowDefinition Height="Auto"/> <!-- Status Row -->
                <RowDefinition Height="*"/>    <!-- DataGrid Row -->
                <RowDefinition Height="Auto"/> <!-- Button Row -->
            </Grid.RowDefinitions>

            <Label Content="Product Management" FontSize="25" Grid.Row="0" HorizontalAlignment="Center" Margin="10"/>

            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
                <Label Content="Product ID" Width="120"/>
                <TextBox x:Name="txtProductID" Width="200" IsEnabled="False"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10">
                <Label Content="Product Name" Width="120"/>
                <TextBox x:Name="txtProductName" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="10">
                <Label Content="Description" Width="120"/>
                <TextBox x:Name="txtDescription" Height="60" Width="200" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="10">
                <Label Content="Price" Width="120"/>
                <TextBox x:Name="txtPrice" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="10">
                <Label Content="Units In Stock" Width="120"/>
                <TextBox x:Name="txtUnitsInStock" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="6" Margin="10">
                <Label Content="Category" Width="120"/>
                <ComboBox x:Name="cboCategory" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="7" Margin="10">
                <Label Content="Image URL" Width="120"/>
                <TextBox x:Name="txtImageUrl" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="8" Margin="10">
                <Label Content="Created Date" Width="120"/>
                <TextBox x:Name="txtCreatedDate" Width="200" IsEnabled="False"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="9" Margin="10">
                <Label Content="Status" Width="120"/>
                <ComboBox x:Name="cboStatus" Width="200">
                    <ComboBoxItem Content="Active" Tag="true"/>
                    <ComboBoxItem Content="Inactive" Tag="false"/>
                </ComboBox>
            </StackPanel>

            <DataGrid x:Name="dgData" Grid.Row="10" Margin="10" AutoGenerateColumns="False" SelectionChanged="dgData_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ProductId" Binding="{Binding ProductId}"/>
                    <DataGridTextColumn Header="ProductName" Binding="{Binding ProductName}"/>
                    <DataGridTextColumn Header="CategoryId" Binding="{Binding CategoryId}"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}"/>
                    <DataGridTextColumn Header="UnitsInStock" Binding="{Binding StockQuantity}"/>
                    <DataGridTextColumn Header="ImageUrl" Binding="{Binding ImageUrl}"/>
                    <DataGridTextColumn Header="CreatedDate" Binding="{Binding CreatedDate}"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                    <DataGridTextColumn Header="Category" Binding="{Binding Category.CategoryName}"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" Grid.Row="11" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="btnCreate" Content="Create" Width="100" Margin="5" Click="btnCreate_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="btnUpdate" Content="Update" Width="100" Margin="5" Click="btnUpdate_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="btnDelete" Content="Delete" Width="100" Margin="5" Click="btnDelete_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="btnClose" Content="Close" Width="100" Margin="5" Click="btnClose_Click" Style="{StaticResource NavButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window> 